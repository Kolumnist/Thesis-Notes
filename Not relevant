\textbf{Deckblatt}
\newline
\textbf{Anfang}
\begin{enumerate}
    \item Abstract
    \item Vorwort / Danksagung (optional)
    \item Abbildungs- und Tabellenverzeichnis
    \item Abkürzungsverzeichnis
    \item Inhaltsverzeichnis
\end{enumerate}
\textbf{Hauptteil}
\begin{enumerate}
    \item \textbf{Einleitung}
    \begin{enumerate}
        \item Motivation
        \item Problemstellung und Ziel
        \item Systemüberblick und Methodiken
    \end{enumerate}
    \item \textbf{Konzepte der Prototypen}
     \begin{enumerate}
        \item Systemarchitektur und Schnittstellenkonzept
        \item Evaluationsdesign und Metriken
        \begin{enumerate}
            \item Zielgruppen
            \item Welche Fragen werden gestellt und fokussiert
        \end{enumerate}
    \end{enumerate}
    \item \textbf{Theoretischer Rahmen}
    \begin{enumerate}
        \item Grundlagen der Haptik und Fahrphysik
        \begin{enumerate}
            \item Grundlagen zum Schleifpunkt
            \item Grundlagen aktiver Force-Feedback-Systeme
            \item Wichtigkeit von Haptik in Fahrschulsimulatoren
        \end{enumerate}
        \item Analyse bestehender Force-Feedback-Systeme
        \item Analyse der Aktuatoren
    \end{enumerate}
    \item \textbf{Prototypische Umsetzung}
    \begin{enumerate}
        \item Entwurf und Aufbau von den Force-Feedback Pedalen
        \item Software-Schnittstellen
        \item Umsetzung realitätsnaher Schwingungen
    \end{enumerate}
    \item \textbf{Ergebnisse}
    \begin{enumerate}
        \item Technische Validierung des Prototypen
        \item Ergebnisse der Zielsetzungen und Reviews
        \item Diskussion und Interpretation der Ergebnisse
    \end{enumerate}
    \item Fazit
    \begin{enumerate}
        \item Zusammenfassung
        \item Beantwortung der Forschungsfragen
        \item Ausblick
    \end{enumerate} 
\end{enumerate}
\textbf{Ende}
\begin{enumerate}
    \item Nachwort
    \item Literaturverzeichnis
    \item Anhang
    \item Eidesstattliche Erklärung
\end{enumerate}

